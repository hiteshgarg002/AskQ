<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black">

        <android.support.v7.widget.Toolbar
            app:layout_scrollFlags="scroll|enterAlways"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="14dp"
                android:animateLayoutChanges="true"
                android:background="@color/black">

                <ImageView
                    android:id="@+id/searchIconOnAnswer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_action_search"
                    android:tint="@color/white"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/askIconOnAnswer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_action_add"
                    android:tint="@color/white"
                    tools:ignore="ContentDescription" />

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

        <android.support.v7.widget.Toolbar
            app:layout_scrollFlags="enterAlways"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="14dp"
                android:layout_marginTop="10dp">

                <com.gigamole.navigationtabstrip.NavigationTabStrip
                    android:id="@+id/answerTabs"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    app:nts_active_color="@color/white"
                    app:nts_animation_duration="300"
                    app:nts_color="@color/black"
                    app:nts_corners_radius="1.5dp"
                    app:nts_factor="2.5"
                    app:nts_gravity="bottom"
                    app:nts_inactive_color="@color/lightest_gray"
                    app:nts_size="15sp"
                    app:nts_titles="@array/answer_titles"
                    app:nts_type="line"
                    app:nts_typeface="fonts/typeface.otf"
                    app:nts_weight="1dp" />

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

</merge>